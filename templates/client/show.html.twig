{% block body %}
	<div class="row mt-2">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">List des Services</h3>
				</div>
				<!-- /.card-header -->
				<div class="card-body">
					<div class="card-body">
						<table id="example1" class="table table-bordered table-striped">
							<thead>
								<tr class="text-center">
									<th>Id</th>
									<th>Login</th>
									<th>Debut</th>
									<th>Fin</th>
								</tr>
							</thead>
							<tbody>
								{% for service in services %}
									<tr>
										<td class="text-center">{{ service.cat.id }}</td>
										<td class="text-center">{{ service.cat.login }}</td>
										<td class="text-center">{{ service.cat.date_debut}}</td>
										<td class="text-center">
											{% if service.cat.date_fin ==  "" %}
												<b class="text-success">
													En service
												</b>
											{% else %}
												<b class="text-danger">
													{{service.cat.date_fin}}
												</b>
											{% endif %}
										</td>

									</tr>
								{% else %}
									<tr>
										<td class="row">no records found</td>
									</tr>
								{% endfor %}
							</tbody>

						</table>
					</div>
				</div>
				<!-- /.card-body -->
				<div class="card-footer"></div>
			</div>
		</div>

	</div>

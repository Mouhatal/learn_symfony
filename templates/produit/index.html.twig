{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1 class="row mb-2">Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Name</th>
				<th scope="col">Cost</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		{% for produit in produits %}
			<tr>
				<th scope="row">{{ produit.id }}</th>
				<td>{{ produit.name }}</td>
				<td>{{ produit.cost }}</td>
				<td>
					<a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
					<a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td scope="row">no records found</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<a href="{{ path('produit_new') }}">Create new</a>{% endblock %}
